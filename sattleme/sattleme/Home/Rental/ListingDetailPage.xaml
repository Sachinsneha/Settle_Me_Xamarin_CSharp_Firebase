<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="sattleme.Home.Rental.ListingDetailPage"
     NavigationPage.HasNavigationBar="False"

    BackgroundColor="#F5F5F5">

    <ContentPage.Content>
        
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Label Text="Listing Detalis" 
 FontSize="36" 
 FontAttributes="Bold" 
 TextColor="Black"
 HorizontalOptions="Center"
 Margin="0,10,0,20"/>
                <Grid>
                    <CarouselView x:Name="carousel" 
                                  ItemsSource="{Binding ImageUrls}" 
                                  HeightRequest="250" 
                                  IndicatorView="{x:Reference indicator}">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" HasShadow="False" CornerRadius="10" Margin="0">
                                    <Image Source="{Binding .}" 
                                           Aspect="AspectFill" 
                                           HeightRequest="250"/>
                                </Frame>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicator" 
                                   IndicatorColor="#aaa" 
                                   SelectedIndicatorColor="#333" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="End" 
                                   Margin="0,0,0,10"/>
                </Grid>

                <Label Text="{Binding Title}" 
                       FontAttributes="Bold" 
                       FontSize="26" 
                       TextColor="#222"/>
                <Label Text="{Binding Price}" 
                       FontSize="22" 
                       TextColor="#008000"/>
                <Label Text="{Binding Address}" 
                       FontSize="18" 
                       TextColor="#444"/>
                <Label Text="{Binding Description}" 
                       FontSize="18" 
                       TextColor="#222"/>

                <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                    <Frame Padding="0" 
                           HasShadow="False" 
                           CornerRadius="25" 
                           WidthRequest="50" 
                           HeightRequest="50">
                        <Image Source="{Binding UserPhoto}" 
                               Aspect="AspectFill" 
                               WidthRequest="50" 
                               HeightRequest="50"/>
                    </Frame>
                    <Label Text="{Binding UserFullName}" 
                           FontAttributes="Bold" 
                           FontSize="20" 
                           TextColor="#222" 
                           VerticalOptions="Center"/>
                </StackLayout>

                <Button Text="Message" 
                        BackgroundColor="#2196F3" 
                        TextColor="White" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnMessageClicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
