<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="sattleme.Home.chat.ChatListPage"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#F5F5F5">

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackLayout Grid.Row="0" Padding="10" Spacing="15">
            <!-- Custom Header -->
            <Label Text="Chats" 
                   FontSize="26" 
                   FontAttributes="Bold" 
                   TextColor="#222"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"/>

            <!-- CollectionView with item spacing for better separation -->
            <CollectionView x:Name="ChatsCollectionView" 
                            SelectionMode="Single" 
                            SelectionChanged="OnChatSelectionChanged">
                <CollectionView.ItemsLayout>
                    <!-- Vertical layout with spacing between items -->
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Chat Card -->
                        <Frame CornerRadius="12" 
                               Padding="15" 
                               Margin="0"
                               HasShadow="True" 
                               BackgroundColor="#FFFFFF"
                               BorderColor="#CCCCCC">
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Partner Photo in circular frame -->
                                <Frame Padding="0"
                                       HasShadow="False"
                                       CornerRadius="35"
                                       WidthRequest="70"
                                       HeightRequest="70"
                                       IsClippedToBounds="True"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center">
                                    <Image Source="{Binding PartnerPhoto}" 
                                           Aspect="AspectFill"
                                           WidthRequest="70" 
                                           HeightRequest="70"/>
                                </Frame>

                                <!-- Chat Info: Partner Name and Last Message -->
                                <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                    <Label Text="{Binding PartnerName}" 
                                           FontSize="20" 
                                           FontAttributes="Bold" 
                                           TextColor="#222"/>
                                    <Label Text="{Binding LastMessage}" 
                                           FontSize="16" 
                                           TextColor="#555" 
                                           LineBreakMode="TailTruncation"/>
                                </StackLayout>

                                <!-- Timestamp -->
                                <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" 
                                       Grid.Column="2" 
                                       VerticalOptions="Center" 
                                       TextColor="#999" 
                                       FontSize="14"
                                       Margin="0,0,5,0"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

        <!-- Bottom Navigation Bar -->
        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     HorizontalOptions="FillAndExpand"
                     BackgroundColor="#005BA1"
                     Padding="0"
                     HeightRequest="60"
                     VerticalOptions="End">
            <!-- Home -->
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="Center"
                         Spacing="2">
                <Image Source="home.png"
                       WidthRequest="24"
                       HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHomeTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <!-- Chat -->
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="Center"
                         Spacing="2">
                <Image Source="chat.png"
                       WidthRequest="24"
                       HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnChatTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <!-- Post -->
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="Center"
                         Spacing="2">
                <Image Source="post.png"
                       WidthRequest="24"
                       HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <!-- Notifications -->
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="Center"
                         Spacing="2">
                <Image Source="notification.png"
                       WidthRequest="24"
                       HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFavoriteTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <!-- Profile -->
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="Center"
                         Spacing="2">
                <Image Source="profile.png"
                       WidthRequest="24"
                       HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnProfileTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
