<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="sattleme.Home.HomePages.HomePage"
    x:Name="PageRoot"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="#EFEFEF">
    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Rental Service"
                 FontAttributes="Bold"
                 FontSize="20"
                 TextColor="#222"
                 Grid.Column="0"
                 VerticalOptions="Center" />
                    <Label Text="View All"
                 TextColor="#007AFF"
                 FontSize="16"
                 Grid.Column="1"
                 VerticalOptions="Center"
                 HorizontalOptions="End">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>

                <CollectionView ItemsSource="{Binding TopListings}"
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"
                        HeightRequest="300">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                             Span="2"
                             HorizontalItemSpacing="10"
                             VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="15"
                     Margin="5"
                     Padding="10"
                     HasShadow="True"
                     BackgroundColor="White"
                     BorderColor="#DDD">
                                <StackLayout Spacing="8">
                                    <Image Source="{Binding ImageUrl}"
                         Aspect="AspectFill"
                         HeightRequest="140" />
                                    <Label Text="{Binding Title}"
                         FontAttributes="Bold"
                         FontSize="16"
                         TextColor="#222" />
                                    <Label Text="{Binding Address}"
                         FontSize="14"
                         TextColor="#666" />
                                    <Label Text="{Binding Price}"
                         FontSize="14"
                         TextColor="#222"
                         FontAttributes="Bold" />
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TopListing_Tapped"
                                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="Pick Up Service"
               FontAttributes="Bold"
               FontSize="18"
               TextColor="#222"
               Margin="0,5,0,0" />
                <Frame CornerRadius="10"
               Padding="10"
               HasShadow="True"
               BackgroundColor="White"
               BorderColor="#DDD">
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Image Source="car.png" WidthRequest="40" HeightRequest="40" />
                        <StackLayout>
                            <Label Text="Book a Ride"
                     FontAttributes="Bold"
                     FontSize="16"
                     TextColor="#222" />
                            <Label Text="Quick and safe pickup"
                     FontSize="12"
                     TextColor="#666" />
                        </StackLayout>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BookRideCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Label Text="To Do"
               FontAttributes="Bold"
               FontSize="18"
               TextColor="#222"
               Margin="0,5,0,0" />
                <Frame CornerRadius="10"
               Padding="10"
               HasShadow="True"
               BackgroundColor="White"
               BorderColor="#DDD">
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Image Source="todo.png" WidthRequest="40" HeightRequest="40" />
                        <StackLayout>
                            <Label Text="Task Manager"
                     FontAttributes="Bold"
                     FontSize="16"
                     TextColor="#222" />
                            <Label Text="Manage your daily tasks"
                     FontSize="12"
                     TextColor="#666" />
                        </StackLayout>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TaskManagerCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Label Text="Book an Agent"
               FontAttributes="Bold"
               FontSize="18"
               TextColor="#222"
               Margin="0,5,0,0" />
                <Frame CornerRadius="10"
               Padding="10"
               HasShadow="True"
               BackgroundColor="White"
               BorderColor="#DDD">
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Image Source="agent.png" WidthRequest="40" HeightRequest="40" />
                        <StackLayout>
                            <Label Text="Find an Agent"
                     FontAttributes="Bold"
                     FontSize="16"
                     TextColor="#222" />
                            <Label Text="Professional support anytime"
                     FontSize="12"
                     TextColor="#666" />
                        </StackLayout>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FindAgentCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

            </StackLayout>
        </ScrollView>

        <StackLayout Grid.Row="1"
                 Orientation="Horizontal"
                 HorizontalOptions="FillAndExpand"
                 BackgroundColor="#005BA1"
                 Padding="0"
                 HeightRequest="60"
                 VerticalOptions="End">
            <StackLayout HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   Spacing="2">
                <Image Source="home.png"
               WidthRequest="24"
               HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHomeTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   Spacing="2">
                <Image Source="chat.png"
               WidthRequest="24"
               HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnChatTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   Spacing="2">
                <Image Source="post.png"
               WidthRequest="24"
               HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   Spacing="2">
                <Image Source="notification.png"
               WidthRequest="24"
               HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFavoriteTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   Spacing="2">
                <Image Source="profile.png"
               WidthRequest="24"
               HeightRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnProfileTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
